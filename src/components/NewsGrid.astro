---
interface News {
  id: string;
  title: string;
  slug: string;
  content: string;
  image_url: string | null;
  created_at: string;
  categories: { id: string; name: string }[] | { id: string; name: string } | null;
}

interface Props {
  noticias: News[];
  categoryName: string;
  emptyMessage?: string;
}

const { noticias, categoryName, emptyMessage = "No hay noticias disponibles en esta categoría" } = Astro.props;
---

<div class="min-h-screen bg-gray-50">
  <!-- Hero Section -->
  <div class="bg-linear-to from-amber-500 to-amber-600 text-black">
    <div class="max-w-7xl mx-auto px-4 py-12">
      <h1 class="text-4xl font-bold mb-2">{categoryName}</h1>
      <p class="text-amber-300">
        {noticias.length} {noticias.length === 1 ? 'noticia' : 'noticias'} disponibles
      </p>
    </div>
  </div>

  <!-- News Grid -->
  <div class="max-w-7xl mx-auto px-4 py-6">
    {noticias.length === 0 ? (
      <div class="text-center py-12">
        <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
        <p class="text-gray-500 text-xl">{emptyMessage}</p>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {noticias.map((noticia) => {
          const category = Array.isArray(noticia.categories) 
            ? noticia.categories[0] 
            : noticia.categories;
          return (
            <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
              {noticia.image_url ? (
                <img 
                  src={noticia.image_url} 
                  alt={noticia.title}
                  class="w-full h-48 object-cover"
                />
              ) : (
                <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                  <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              )}
              <div class="p-6">
                {category && (
                  <span class="inline-block bg-amber-100 text-amber-800 text-xs font-semibold px-3 py-1 rounded-full mb-3">
                    {category.name}
                  </span>
                )}
                <h2 class="text-xl font-bold text-gray-900 mb-3 hover:text-amber-600 transition-colors">
                  <a href={`/user/noticia/${noticia.slug}`}>
                    {noticia.title}
                  </a>
                </h2>
                <p class="text-gray-600 mb-4 line-clamp-3">
                  {noticia.content.substring(0, 150)}...
                </p>
                <div class="flex items-center justify-between">
                  <time class="text-sm text-gray-500">
                    {new Date(noticia.created_at).toLocaleDateString('es-ES', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  <a 
                    href={`/user/noticia/${noticia.slug}`}
                    class="text-amber-600 hover:text-amber-800 font-semibold text-sm"
                  >
                    Leer más →
                  </a>
                </div>
              </div>
            </article>
          );
        })}
      </div>
    )}
  </div>
</div>
